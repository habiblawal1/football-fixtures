<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.getfixtures</string>

    <key>ProgramArguments</key>
    <array>
        <string>/Users/habiblawal/opt/anaconda3/bin/python</string>
        <string>/Users/habiblawal/Documents/GitHub/football-fixtures/getFixtures.py</string>
